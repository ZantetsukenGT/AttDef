{
	"editor.defaultFormatter": "xaver.clang-format",
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,
	"editor.tabSize": 4,
	"search.useIgnoreFiles": false,
	"files.insertFinalNewline": true,
	"files.associations": {
		"*.inc": "cpp",
		"*.pwn": "cpp",
		"*.pawn": "cpp"
	},
	"[cpp]": {
		"editor.defaultFormatter": "ms-vscode.cpptools"
	}
}
